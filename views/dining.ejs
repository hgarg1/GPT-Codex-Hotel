<%- include('partials/head', { pageTitle, hotelName, csrfToken, darkMode }) %>
<%- include('partials/nav') %>
<%- include('partials/alerts') %>
<section class="page-hero" data-animate="fade-up">
  <h1>Culinary Nebula</h1>
  <p>Dining at <%= hotelName %> is a sensory performance where gastronomy meets light, sound, and scent.</p>
</section>
<section class="culinary-grid" data-animate="fade-up">
  <% culinaryJourneys.forEach(function(stop) { %>
    <article class="culinary-card" data-hover-expand tabindex="0">
      <h2><%= stop.name %></h2>
      <p><%= stop.description %></p>
      <div class="card-expand">
        <h4>Tasting Signal</h4>
        <p>
          Hover to reveal the sensory crescendo—<%= stop.name %> layers aromatics, sound design, and projection mapping in real time.
        </p>
        <ul class="expand-highlights">
          <li><span>✹</span> Pairings evolve every 18 minutes, guided by our orbiting flavour AI.</li>
          <li><span>✹</span> Insider tip: request the luminescent tea flight to unlock a private chef transmission.</li>
        </ul>
      </div>
    </article>
  <% }) %>
</section>
<section class="facility-list" data-animate="fade-up">
  <h2>Skyhaven Facilities</h2>
  <ul>
    <% facilities.forEach(function(item) { %>
      <li><span class="icon">▰</span> <%= item %></li>
    <% }) %>
  </ul>
</section>
<%- include('partials/footer') %>
